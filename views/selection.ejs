    .popup {
      display: none;
      position: fixed;
      top: 70%;
      left: 0;
      width: 100%;
      height: 100%;
      justify-content: center;
      color:#28a745;
      
    }
    .fa-check-circle {
      color: #28a745; /* Green color for the checkmark */
      font-size: 24px;
      margin-right: 10px;
    }
    
